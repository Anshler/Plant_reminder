<ForgetPasswordOTPScreen>:
    canvas:
        Color:
            rgba: app.background_color
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout: # Back_button_region
        size_hint: 1, 1.15/12
        pos_hint: {'center_x': 0.5, 'top': 1}
        canvas:
            Color:
                rgba: 0, 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: back_button
            size_hint: None, 0.9/1.25
            width: self.height
            pos_hint: {'center_x': 1.00001/12, 'center_y': 0.5}
            background_color: 0,0,0,0
